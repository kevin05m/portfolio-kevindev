---
import { Icon } from "astro-icon/components";
---

<div class="text-center items-center gap-5">
	<div class="grid gap-5 grid-cols-3">
		<div
			class="flex flex-col bg-neutral-800 text-neutral-400 py-8 hover:text-white hover:transition-all fill-neutral-400 hover:fill-white items-center rounded-lg transition hover:scale-105">
			<Icon name="html5" class="size-14 pb-4" />
			<div class="text-lg text-center">HTML</div>
		</div>
		<div
			class="flex flex-col bg-neutral-800 text-neutral-400 py-8 hover:text-white hover:transition-all fill-neutral-400 hover:fill-white items-center rounded-lg transition hover:scale-105">
			<Icon name="iconcss" class="size-14 pb-4" />
			<div class="text-lg text-center">CSS</div>
		</div>
		<div
			class="flex flex-col bg-neutral-800 text-neutral-400 py-8 hover:text-white hover:transition-all fill-neutral-400 hover:fill-white items-center rounded-lg transition hover:scale-105">
			<Icon name="iconjs" class="size-14 pb-4" />
			<div class="text-lg text-center">JS</div>
		</div>
		<div
			class="flex flex-col bg-neutral-800 text-neutral-400 py-8 hover:text-white hover:transition-all fill-neutral-400 hover:fill-white items-center rounded-lg transition hover:scale-105">
			<Icon name="iconpython" class="size-14 pb-4" />
			<div class="text-lg text-center">Python</div>
		</div>
		<div
			class="flex flex-col bg-neutral-800 text-neutral-400 py-8 hover:text-white hover:transition-all fill-neutral-400 hover:fill-white items-center rounded-lg transition hover:scale-105">
			<Icon name="iconcpp" class="size-14 pb-4" />
			<div class="text-lg text-center">C++</div>
		</div>
	</div>
</div>
